@model List<ASPWebTest.ViewModels.MenuRegisterViewModel>

@{
    ViewData["Title"] = "Menu Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
        <span class="text-danger mb-3">
        @Html.Raw(ViewBag.Message)
        </span>
}

<div class="row">
    <div class="col-md-6">
        <form action="Menu" method="post" Id="formRegister" role="form" class="form-horizontal" data-ajax="true">
            <div class="form-group pt-3">
                <table class="table">
                    <thead>
                        <tr>
                            <td>Menu Name</td>
                            <td>Read</td>
                            <td>Create</td>
                            <td>Update</td>
                            <td>Delete</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.HiddenFor(model => model[i].MenuId)
                                    @Html.HiddenFor(model => model[i].MenuName)
                                    @Model[i].MenuName
                                </td>
                                <td>
                                    @Html.CheckBoxFor(model => model[i].CanRead)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(model => model[i].CanCreate)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(model => model[i].CanUpdate)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(model => model[i].CanDelete)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Save" Id="btnClick" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

